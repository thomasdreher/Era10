SUBROUTINE THOMAS.DEBUG(STAT,LOG)
$include GEN.BP ERANET.EQUATES
$INCLUDE GEN.BP ERANET.ALLEQUATES

*IF USR # "bernardl" then return home
open "THOMAS.DEBUGFILE" TO THOMAS.DEBUG ELSE return
CALL UNIQUE.ID(KEY)
LREC = ""
LREC<1> = DATE()
LREC<2> = SYSTEM(12)

LREC<3> = STAT
LREC<4> = LOWER(LOG)
LREC<5> = LOWER(SYSTEM(9001))
WRITE LREC ON THOMAS.DEBUG,KEY
RETURN
